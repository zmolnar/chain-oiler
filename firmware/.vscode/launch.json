    "version": "0.2.0",
    "configurations": [
        {
            "type": "cortex-debug",
            "request": "launch",
            "name": "Debug J-Link",
            "cwd": "${workspaceRoot}",
            "executable": "${workspaceRoot}/build/ch.elf",
            "serverpath": "/usr/bin/JLinkGDBServerCLExe", 
            "servertype": "jlink",
            "device": "STM32F103C8",
            "interface": "swd",
            "serialNumber": "",
            "jlinkscript":"",
            "runToMain": true,
            "svdFile": "/opt/SEGGER/Ozone_V324b/Config/Peripherals/STM32F103xx.svd",
            "swoConfig":{
                "enabled":true,
                "source":"probe",
                "swoFrequency": 2440700,
                "cpuFrequency":48000000,
                "decoders": [
                    {
                        "port": 0,
                        "type": "console",
                        "label": "SWO output",
                        "encoding":"ascii"
                    }
                ]
            }
        }
    ]
